    "version": "0.2.0",
    "inputs": [
        {
            "type": "command",
            "id": "timestamp",
            "command": "/usr/bin/date",
            "args": [
                "+%s"
            ]
        }
    ],
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "pwa-chrome",
            "url": "http://localhost:3000",
            "webRoot": "${workspaceFolder}/cmd/stream/app"
        },
        {
            "name": "displaytest",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/displaytest",
            "args": [],
        },
        {
            "name": "serialdmx",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/dmxtool",
            "args": [
                "--display=ftdidmx"
            ],
        },
        {
            "name": "stream",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/stream",
            "args": [],
        },
        {
            "name": "HEADSET-03+dummy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/scan",
            "args": [
                "--bluetooth-address=98:D3:31:80:7B:3D",
                "--display=dummy"
            ],
        },
        {
            "name": "HEADSET-03+ftdidmx",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/scan",
            "args": [
                "--bluetooth-address=98:D3:31:80:7B:67",
                "--display=ftdidmx"
            ],
        },
        {
            "name": "HEADSET-03+config",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/scan",
            "args": [
                "--config=${workspaceFolder}/hack/headset-02-both.yaml"
            ],
        },
        {
            "name": "config+dummy",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/scan",
            "args": [
                "--config=${workspaceFolder}/hack/headset-03.yaml",
                "--display=dummy"
            ],
        },
        {
            "name": "HEADSET-03+csv",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/cmd/scan",
            "args": [
                "--config=${workspaceFolder}/hack/headset-03-csv.yaml",
            ],
        },
    ]
}